@model IEnumerable<UserCollection.WebAPI.Models.ItemModel>

@{
    ViewData["Title"] = "CollectionItems";
}

<h1>CollectionItems</h1>

<p>
    <a asp-action="CreateItem" asp-route-id="@ViewBag.CollectionId">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CollectionId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CollectionId)
            </td>
            <td>
                @Html.ActionLink("Edit", "ItemEdit", new {  id=item.Id }) |
                @Html.ActionLink("Details", "ItemDetails", new {  id=item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
}
    </tbody>
</table>
