@{
    ViewData["Title"] = "User list";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>User name</th>
            <th>Email</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in ViewBag.Users)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    @Html.ActionLink("Details", "UserDetails", new { email = user.Email }) |
                    @Html.ActionLink("Delete", "DeleteUser", new {  id = user.Id })
                </td>
            </tr>
        }
    </tbody>
</table>